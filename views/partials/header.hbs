<!-- Header Section Begin -->
<header class="header">
  <div class="header__top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <div class="header__top__left">
            <ul>
              <li><i class="fa fa-envelope"></i> 20127553_20127502@hcmus.edu.vn</li>
              <li>Hàng sạch, thích đồ thơm</li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-md-6">
          <div class="header__top__right align-right">
            <div class="header__top__right__auth align-right">
              {{#if user}}
                <a href="/my-account">
                  <div style="font-size: 14px;">
                    <i class="fas fa-user-check"></i>
                    Hello
                    {{user.name}}
                  </div>
                  <a href="/my-account/logout">
                    <i class="fas fa-sign-out-alt" style="margin-left: 10px;"></i>
                    Đăng Xuất</a>
              {{else}}
                <a href="/login">
                  <i class="fas fa-sign-in-alt" style="margin-left: 10px;"></i>
                  Đăng nhập</a>
                <a href="/register"><i class="fa fa-user-plus" style="margin-left: 10px;"></i>
                  Đăng ký</a>
              {{/if}}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <div class="header__logo">
          <a href="/"><img src="/img/logo.png" alt="" /></a>
        </div>
      </div>
      <div class="col-lg-6 col-md-6">
        <nav class="header__menu">
          <ul>

            <li class="{{#if home}}active{{/if}}"><a href="/">Trang chủ</a></li>
            <li class="{{#if shop}}active{{/if}}"><a href="/category">Mua sắm</a></li>
            <li class="{{#if blog}}active{{/if}}"><a href="/blog">Bài viết</a></li>
            <li class="{{#if contact}}active{{/if}}"><a href="/contact">Liên hệ</a></li>
          </ul>
        </nav>
      </div>
      <div class="col-lg-3 col-md-3">

      </div>
    </div>
    <div class="humberger__open">
      <i class="fa fa-bars"></i>
    </div>
  </div>
</header>
<!-- Header Section End -->